@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Geri alma kodu doğrulama";
}
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jodit/3.1.92/jodit.min.css">
<script src="//cdnjs.cloudflare.com/ajax/libs/jodit/3.1.92/jodit.min.js"></script>

<section class="ab-info-main py-md-5">
    <div class="container py-md-3">
        <h1>@ViewData["Title"]</h1>
        <hr />
        <p>
            Geri alma kodu ile giriş isteğinde bulundunuz. Bu giriş siz kimlik uygulamanızı girişte veya 2FA engelinde sağlayana kadar hatırlanmayacak.
            Ve yeniden giriş yapın.
        </p>
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.RecoveryCode">Geri alma kodu</label>
                        <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Giriş yap</button>
                </form>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        var editor = new Jodit('#Content');
    </script>
}